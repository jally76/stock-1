@model Stock.Core.Dto.UserDto

@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Register", "Auth"))
{
    <div class="control-group warning">
        <label class="control-label">@Html.LabelFor(m => m.Name)</label>
        <div>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.HiddenFor(m => m.Id)
        </div>

        <label class="control-label">@Html.LabelFor(m => m.Email)</label>
        <div>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>

        <label class="control-label">@Html.LabelFor(m => m.Password)</label>
        <div>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>

    </div>
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Register</button>
    </div>
}
